# SIMVEB Microservices - Environment Variables

# PostgreSQL
DB_PASSWORD=simveb_db_password_secure_2024

# Redis
REDIS_PASSWORD=simveb_redis_password_secure_2024

# RabbitMQ
RABBITMQ_PASSWORD=simveb_rabbitmq_password_secure_2024

# Payment Gateways
FEDAPAY_PUBLIC_KEY=your_fedapay_public_key
FEDAPAY_SECRET_KEY=your_fedapay_secret_key
KKIAPAY_PRIVATE_KEY=your_kkiapay_private_key
KKIAPAY_PUBLIC_KEY=your_kkiapay_public_key
KKIAPAY_SECRET=your_kkiapay_secret

# Email (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS Provider
SMS_PROVIDER=your_sms_provider
SMS_API_KEY=your_sms_api_key

# File Storage (S3/MinIO)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=simveb-documents

# External Integrations
ANIP_URL=https://anip-api.bj
ANIP_CLIENT_ID=your_anip_client_id
ANIP_CLIENT_SECRET=your_anip_client_secret

DGI_URL=https://dgi-api.bj
DGI_API_KEY=your_dgi_api_key

# Sentry (Monitoring)
SENTRY_DSN=your_sentry_dsn
